<!DOCTYPE html>

     <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
     <title><%= h(yield(:title) || "Site Name") %></title>  
     	<%= stylesheet_link_tag "one.css" %>  
		 
	   	<%= yield(:head) %>   	 	 
		<%#= javascript_include_tag :defaults %>		 
		<script type="text/javascript" src="/javascripts/jquery-1.4.2.min.js"></script>	
 		<script type="text/javascript" src="/javascripts/jquery.watermark.js "></script> 
 	
	</head>  
  <body>
	<div id = "mask"> 	
		<div id="header">  	
			
    		<% if current_user %>
				<div id = 'user'>
    	  			<%= current_user.login.capitalize%>  
					 |&nbsp;<%= link_to "Log out", logout_path %> 
    	  		</div>
			<%end%>
			<h1 class = 'center'>Cortex Engine</h1>
		</div>
	
		<div id = "col1">	
			<div id ="flash"> 	 
				<% if flash[:error] || flash[:notice] %>
					<span class = flash>	 
  					<%= content_tag :span, flash[:error] || flash[:notice], :id => 'notice', :class => ('error' if flash[:error]) %>
  					<% flash.discard(:notice) || flash.discard(:error)%>
					<script type="text/javascript">
 						$("#notice")
						.fadeIn( function() 
   						{
      					setTimeout( function()
      					{
         				$("#notice").fadeOut("slow");
      					}, 3000);
   						}); 
					</script> 
					</span>			 
				<% end %>
			</div><br>
		<%= yield %>

		</div>
		<div id="footer">
 			<%= render :partial => "/shared/footer"%>
  
		</div>
	</div>	   
  </body>  
</html>  

